ion-header {
    ion-toolbar {
        --background: #4162fb;
        color: #fff;
        --border-color:#4162fb;
    }
}
.headerTitle{
    padding-left: .8rem;
    background: #4162fb url("../../../assets/imgs/map-bg.png") no-repeat;
    background-position: center bottom;
    background-size: 100%;
    color: #fff;
    padding-bottom: 15px;
    padding-top: 10px;
    p{
        margin: 0;
        font-size: .9rem;
        margin-bottom: 10px;
    }

    .first{
        font-weight: bold
    }
}
.phoneBox{
    display: flex;
    justify-content: center;
    align-items: center;
  
    img{
        width: 1.2rem;
        height: 1.2rem;
        margin-right: 5px;
    }
    span{
        color: #4162fb;
        border-bottom: 1px solid  #4162fb;
    }
}
.space{
    background-color: #F1EFEF;
    height: 10px;
}
.declareBox{
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    border-top: 1px solid #efeeee;
    border-bottom: 1px solid #efeeee;
    div{
        width: 33.3%;
        height: 6.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border: 1px solid #efeeee;
        border-top: none;
        img{
            width: 30px;
            height: 30px;
            margin-bottom: 5px;
        }
        p{
            text-align: center;
            margin: 0;
            height: 2rem;
            font-size: .6rem;
            padding: 0 0.5rem;  
        }
    }
    div:nth-of-type(2){
        border-left: none;
   
       
    }
    div:nth-of-type(3){
        border-left: none;
       
    }
    div:nth-of-type(5){
        border-left: none;
       
        border-bottom: none;
        
    }
    div:nth-of-type(4){
        border-bottom: none;
    }
    div:nth-of-type(6){
        border-bottom: none;
        border-left: none;
    }
}
.borderBox{
    div:nth-of-type(1){
        border-bottom: none;
    }
    div:nth-of-type(2){
        border-bottom: none;
    }
}
.padding-lr-16{ padding-left: 16px; padding-right: 16px;}
.p-title {
 
    position: relative;
    text-indent: 24px;
    padding-left: 0 !important;
}
.p-title::before {
    position: absolute;
    top: 3px;
    left: 15px;
    width: 3px;
    height: 16px;
    background: #4162fb;
    border-radius: 15px;
    content: '';
}


ion-buttons{
    --margin-end:50px;
}