<ion-header mode='ios'>
  <ion-toolbar mode='ios'>
    <ion-buttons slot="start">
      <ion-back-button text="" icon="ios-arrow-back" mode='ios'></ion-back-button>
    </ion-buttons>
    <ion-title>后评价备案信息</ion-title>
  </ion-toolbar>
</ion-header>


<ion-content>

  <div *ngFor="let item of dataList; let i = index ">
    <ion-grid class="padding info-color">
      
     
    </ion-grid>
    <ion-grid class="dec-list">
        <p class="p-title">后评价备案信息{{i+1}}</p>
        <ion-row align-items-center>
          <ion-col class="left-text" size="5">后评价文件名称：</ion-col>
          <ion-col class="right-text" size="7">{{item.documentName}}</ion-col>
        </ion-row>
        <ion-row align-items-center>
          <ion-col class="left-text" size="5">后评价备案时间:</ion-col>
          <ion-col class="right-text" size="7">{{item.recordTime}}</ion-col>
        </ion-row>
        <ion-row align-items-center>
          <ion-col class="left-text" size="5">建设单位：</ion-col>
          <ion-col class="right-text" size="7">{{item.constructionUnit}}</ion-col>
        </ion-row>
        <ion-row align-items-center>
          <ion-col class="left-text" size="5">建设地点：</ion-col>
          <ion-col class="right-text" size="7">{{item.constructionSite}}</ion-col>
        </ion-row>
        <ion-row>
          <ion-col class="left-text" size="6">后评价报告编制单位：</ion-col>
          <ion-col class="right-text" size="6">{{item.unit}}</ion-col>
        </ion-row>
        <ion-row align-items-center>
          <ion-col class="left-text" size="5">备注：</ion-col>
          <ion-col class="right-text" size="7">{{item.remark}}</ion-col>
        </ion-row>
        <ion-row align-items-center>
          <ion-col class="left-text" size="5">相关附件：</ion-col>
          <ion-col class="right-text" size="7"><a href="javascript:void(0)">{{item.fileName}}</a></ion-col>
        </ion-row>
      </ion-grid>
  </div>
</ion-content>