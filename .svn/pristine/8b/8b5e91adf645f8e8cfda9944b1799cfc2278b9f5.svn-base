<ion-header mode='ios'>
  <ion-toolbar mode='ios'>
    <ion-buttons slot="start">
      <ion-back-button text="" icon="ios-arrow-back" mode='ios'></ion-back-button>
    </ion-buttons>
    <ion-title>建设项目基本情况</ion-title>
  </ion-toolbar>
</ion-header>

<ion-content>
  <ion-grid class="dec-list">
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">环评文件：</ion-col>
      <ion-col class="right-text" size="7">{{enviAssessmentTypeName}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">申请人类别：</ion-col>
      <ion-col class="right-text" size="7">{{applicantPeopleType}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">许可类别：</ion-col>
      <ion-col class="right-text" size="7">{{permissionType}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">项目名称：</ion-col>
      <ion-col class="right-text" size="7">{{projectName}}</ion-col>
    </ion-row>
    <ion-row>
      <ion-col class="left-text" size="5">建设单位(投资人)：</ion-col>
      <ion-col class="right-text" size="7">{{constructionUnit}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="6">有无统一社会信用代码：</ion-col>
      <ion-col class="right-text" size="6">{{isCreditNumber}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">组织机构代码：</ion-col>
      <ion-col class="right-text" size="7">{{organCertificateNumber}}</ion-col>
    </ion-row>
    <ion-row align-items-center>

      <ion-col class="left-text" size="5">建设地点：</ion-col>
      <ion-col class="right-text" size="7">{{constructionSite}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">立项部门：</ion-col>
      <ion-col class="right-text" size="7">{{establishmentDepartment}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">行业类别：</ion-col>
      <ion-col class="right-text" size="7">{{industryType}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">环评单位：</ion-col>
      <ion-col class="right-text" size="7">{{enviAssessmentUnit}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="6">环评类别：</ion-col>
      <ion-col class="right-text" size="6">{{enviAssessmentClass}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="6">环评工程师：</ion-col>
      <ion-col class="right-text" size="6">{{enviAssessmentEngineer}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">项目属性：</ion-col>
      <ion-col class="right-text" size="7">{{projectAttribute}}</ion-col>
    </ion-row>
    <ion-row align-items-center>
      <ion-col class="left-text" size="5">建设项目类别：</ion-col>
      <ion-col class="right-text" size="7">{{constrctProjectClass}}</ion-col>
    </ion-row>
  </ion-grid>
</ion-content>