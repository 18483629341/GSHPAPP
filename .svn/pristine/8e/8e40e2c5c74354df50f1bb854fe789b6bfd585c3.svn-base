<ion-header mode='ios'>
  <ion-toolbar mode='ios'>
    <ion-buttons slot="start">
      <ion-back-button text="" icon="ios-arrow-back" mode='ios'></ion-back-button>
    </ion-buttons>
    <ion-title>编制单位信息</ion-title>
  </ion-toolbar>

  <div class="top_head">
    <ion-segment id="top_tab">
      <ion-segment-button checked=true class="top_tab_item" [ngClass]="{'active': str==1?true:false}" (click)='OnitemClick(1)'>
        机构
      </ion-segment-button>
      <ion-segment-button class="top_tab_item" [ngClass]="{'active': str==2?true:false}" (click)='OnitemClick(2)'>
        工程师
      </ion-segment-button>
      <ion-segment-button class="top_tab_item" [ngClass]="{'active': str==3?true:false}" (click)='OnitemClick(3)'>
        项目
      </ion-segment-button>
      <ion-segment-button class="top_tab_item" [ngClass]="{'active': str==4?true:false}" (click)='OnitemClick(4)'>
        诚信信息
      </ion-segment-button>
    </ion-segment>
  </div>

</ion-header>

<ion-content>

  <div [style.display]="str==1?'block':'none'">
    <ion-grid class="dec-list">
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">机构名称：</ion-col>
        <ion-col class="right-text" size="7">{{organizationName}}</ion-col>
      </ion-row>
      <ion-row align-items-center>

        <ion-col class="left-text" size="5">机构性质：</ion-col>
        <ion-col class="right-text" size="7">{{organizationNature}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">组织机构代码证号：</ion-col>
        <ion-col class="right-text" size="7">{{organCertificateNumber}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">统一社会信用代码：</ion-col>
        <ion-col class="right-text" size="7">{{socialCreditCode}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">行政区规划：</ion-col>
        <ion-col class="right-text" size="7">{{regionName}}</ion-col>
      </ion-row>
      <ion-row>
        <ion-col class="left-text" size="5">机构地址：</ion-col>
        <ion-col class="right-text" size="7">{{address}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">经度：</ion-col>
        <ion-col class="right-text" size="7">{{longitude}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">纬度：</ion-col>
        <ion-col class="right-text" size="7">{{latitude}}</ion-col>
      </ion-row>
      <ion-row align-items-center>

        <ion-col class="left-text" size="5">成立时间：</ion-col>
        <ion-col class="right-text" size="7">{{creatTime}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">法定代表人：</ion-col>
        <ion-col class="right-text" size="7">{{legalPerson}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">有效期：</ion-col>
        <ion-col class="right-text" size="7">{{validityTime}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">发证时间：</ion-col>
        <ion-col class="right-text" size="7">{{issuingTime}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="6">甲级报告书评价范围：</ion-col>
        <ion-col class="right-text" size="6">{{aReportRange}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="6">乙级报告书评价范围：</ion-col>
        <ion-col class="right-text" size="6">{{bReportRange}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">报告表评价范围：</ion-col>
        <ion-col class="right-text" size="7">{{reportFormRange}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">机构资质等级：</ion-col>
        <ion-col class="right-text" size="7">{{organizationLevel}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">资格证号：</ion-col>
        <ion-col class="right-text" size="7">{{certificateNumber}}</ion-col>
      </ion-row>
      <ion-row align-items-center>
        <ion-col class="left-text" size="5">联系人：</ion-col>
        <ion-col class="right-text" size="7">{{contactPeople}}</ion-col>
      </ion-row>
    </ion-grid>
  </div>

