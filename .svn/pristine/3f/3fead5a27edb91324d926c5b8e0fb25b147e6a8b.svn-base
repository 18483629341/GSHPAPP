.header-md {
    position: static;
}

.padding{ padding-left: 16px; padding-right: 16px;padding-top: 10px;padding-bottom: 16px;}
.info-color span{color: #777}

.table_title{
    background: #fff;
    padding: 10px 0;
    border-bottom: #ededed solid 1px;
}

.table_title span{
    color: #3a3a3a;
    font-weight: bold;
    padding-left: 10px;
    
}

.TranslateXYContainer {
    position: relative;
    width: 500px;
    height: 300px;
    top: 10px;
    left: 4px;
}

.tb1 {
    border: 1px solid #4162fb;
    background: #4162fb;
    position: absolute;
    z-index: 10001;
    width: 100px;
    height: 30px;
    top: 0px;
    left: 0px;
    color: #fff;
}

.contain {
    width: 500px;
    height: 300px;
    overflow: scroll;
    position: relative;
    float: left;
}


.tb2 {
    border: 1px solid #4162fb;
    background-color: #fff;
    position: sticky;
    top: 0px;
    margin-left: 100px;
    height: 30px;
    z-index: 1000;
}
.tb3 {
    background: rgb(244, 245, 245);
    left: 0px;
    height: 100%;
    float: left;
    position: sticky;
    z-index: 1000;
    width: 100px;
}

.tab3 th{
    border: 1px solid #777;
}

.tb4 {
    left: 100px;
    width: 500px;
    position: absolute;
    font-size: 10px;
}


th,
td,
tr {
    border: #777 1px solid;
    height: 35px;
    width: 100px;
    overflow: hidden;
    // width: 100px;
    text-align: center;
    font-size: 10px;
}
