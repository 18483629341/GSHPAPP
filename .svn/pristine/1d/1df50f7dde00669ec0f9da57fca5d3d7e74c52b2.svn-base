<ion-header mode='ios'>
  <ion-toolbar mode='ios'>
    <ion-buttons slot="start">
      <ion-back-button text="" icon="ios-arrow-back" mode='ios'></ion-back-button>
    </ion-buttons>
    <ion-title>三同时检查详情</ion-title>
  </ion-toolbar>
</ion-header>
<ion-content>
  <table class="list">
    <tr>
      <th style="width:20%">序号</th>
      <th style="width:45%">检查项</th>
      <th style="width:35%">结果</th>
    </tr>
    <tr *ngFor="let item of listAarry" [ngStyle]="{'background': item.result!=='已检查确认'?'yellowgreen':''}">
      <td align="center">{{item.num}}</td>
      <td>{{item.check}}</td>
      <td>{{item.result}}</td>
    </tr>
  </table>
  <table class="remark">
    <tr>
      <td style="width:30%;background-color: #f2f2f2" align="end">备注：</td>
      <td>
        <ion-textarea></ion-textarea>
      </td>
    </tr>
  </table>


</ion-content>