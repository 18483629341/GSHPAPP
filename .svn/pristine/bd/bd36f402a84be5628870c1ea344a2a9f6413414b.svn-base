ion-header {
    ion-toolbar {
        --background: #4162fb;
        color: #fff;
    }
}

.top_head{
    background: #4162fb;
    padding-top: 10px;
    padding-bottom: 10px;
    border-top: #fff solid 0.55px;
    width: 100%;
    // height: 30px;
}

.header-md {
    position: static;
}

#top_tab{
    // --background: #4162fb;
    // --background-checked: white;
    --color:white;
    // --color-checked:#4162fb;
    
    --indicator-color:none;
    --indicator-color-checked:none;
    // --border-color: #fff;
    margin: 0 auto;
    width: 90%;
    height: 30px;
}

.top_tab_item{
    min-height: 28px;
}

ion-segment-button{
    border: 0.55px solid #fff;
    min-width: 70px;
    width: 25%;
}

ion-segment-button:first-child{
    border-right: none;
    border-top-left-radius:5px;
    border-bottom-left-radius:5px;
}
ion-segment-button:nth-child(2){
    border-right: none;
}

ion-segment-button:last-child{
    border-left: none;
    border-top-right-radius:5px;
    border-bottom-right-radius:5px;
}

.active{
    background-color: #fff;
    color: #4162fb;
}

ion-header {
    ion-toolbar {
        --background: #4162fb;
        color: #fff;
    }
}
.padding{ padding-left: 16px; padding-right: 16px;padding-top: 10px;padding-bottom: 16px;}
.info-color span{color: #777}

.table_title{
    margin-top: 10px;
}

.table_title span{
    color: #4162fb;
    font-weight: bold;
    padding-left: 10px;
}
.table_speace{
    height: 200px;
    overflow: hidden;
}
.pro_type{
    width: 100%;
    height: 36px;
    background-color: #4162fb;
    margin-top: 0px;
    text-align: center;
    display: flex;
}
.pro_type div{
    padding-left: 0px;
    margin-top: 0px;
    color: rgb(212, 212, 212);
    font-size: 12px;
    height: 30px;
    line-height: 30px;
    width: 20%;
    margin-bottom: 2px;
}

.changePro{
    color: #fff !important;
    border-bottom:#fff 2px solid;
}

.pro_type div:last-child{
    width: 60%;
}

img{
    width: 26px;
    height: 26px;
}

ion-item{
    height: 56px;
    line-height: 56px;
}

ion-label{
    height: 56px;
    line-height: 56px;
    margin-left: 6px;
    border-bottom: 0.55px solid rgb(247, 247, 247);
    margin-top: 0px;
    margin-bottom: 0px;
}

ion-label p:first-child{
    margin-top: 12px;
    height: 16px;
    line-height: 16px;
    color: #131313;
    font-size: 14px;
}



ion-label p:last-child{
    height: 16px;
    line-height: 16px;
    color: #767676;
    font-size: 11px;
}

/* 详情列表通用样式 start*/
.dec-list{
    background: #fff;
    padding:10px 13px;
    margin-bottom:20px;
    ion-row{
        line-height: 25px;
        border-bottom: .55px solid #eee;
        min-height: 40px;
    }
    .left-text{
        color: #9d9fa7;   
        font-size: 14px;
    }
    .right-text{  
        font-size: 14px;
        text-align: right;
        color:#333;
    }
}

/* 详情列表通用样式 end*/